<div class="job">
  <div class="accordion-item whole-job">
    <h2 class="accordion-header" id="flush-heading<%= job.id %>">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse<%= job.id %>" aria-expanded="false" aria-controls="flush-collapse<%= job.id %>">
        <p class=""><strong><%= job.company %></strong> | <%= job.title %>
          <span class="position-absolute end-0"><%= job.status %></span> </p>
      </button>
    </h2>
    <div id="flush-collapse<%= job.id %>" class="accordion-collapse collapse job-card-content" aria-labelledby="flush-heading<%= job.id %>" data-bs-parent="#accordionFlushExample">
      <div class="d-flex job-body justify-content-between">
        <div class="to-do"><strong>To Do:</strong>
          <% job.tasks.each do |task| %>
            <p class="job-task"> <%= task.title %> </p>
          <% end %>
        </div>
        <div class="center-border"></div>
        <div class="notes"><strong>Notes:</strong>
          <p><%= job.notes %></p>
        </div>
      </div>
      <div class="appointments d-flex justify-content-between">
        <div>
          <strong>Appointments:</strong>
          <p class="appointment">no appointments</p>
        </div>
        <div>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Edit this job
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "job_form", job: job %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
