<%= simple_form_for(job) do |f| %>
  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :deadline, as: :date, html5: true %>
  <%= f.input :url, :label => "Job url" %>
  <%= f.input :status, as: :select, collection: Job.statuses.keys, selected: 0%>
  <%= f.input :notes %>
  <%= f.input :cv, as: :file %>
  <%= f.input :cover_letter, as: :file %>
  <% if job.persisted? %>
    <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  <% else %>
    <%= f.submit 'Add job', class: 'btn btn-primary' %>
  <% end %>
<% end %>
