<div class="modal fade" id="job-status<%= job.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="exampleModalLabel"><%= job.title %></h5>
        <button type="button" class="btn-close fs-6" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="fs-6">Change application status</p>
        <%= simple_form_for(job) do |f| %>
          <%= f.input :status, as: :select, collection: Job.statuses.keys, label: false,  default: job.status %>
          <%= f.submit 'Save status', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>