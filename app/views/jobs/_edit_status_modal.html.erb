<!-- Modal -->
<div class="modal fade" id="job-status" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Application status</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(job) do |f| %>
          <%= f.input :status %>
          <%= f.submit 'Save status', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>