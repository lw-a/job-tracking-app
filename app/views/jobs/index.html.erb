<div class="row justify-content-center mx-3">
 <div class="col-sm-12 col-md-8 col-lg-8">
  <h2>Welcome back, <%= current_user.first_name.capitalize %>!</h2>
  <div id="job-stats" class="my-3">
    <div class="d-flex flex-column job-stats">
      <h3>Your job stats</h3>
      <div class="p-2 align-items-center">
        <div class="row d-flex justify-content-center">
          <div class="col-sm-2">
            <div class="stats stats-pending pt-2 pb-3 px-2">
              <div class="stats-body">
                <i class="fa-solid fa-hourglass-start"></i>
                <h5 class="stats-title text-center"><strong>Jobs Pending</strong></h5>
                <p class="stats-count text-center"><%= @pending %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="stats stats-applied pt-2 pb-3 px-1">
              <div class="stats-body">
                <i class="fa-solid fa-paper-plane"></i>
                <h5 class="stats-title text-center"><strong>Jobs Applied</strong></h5>
                <p class="stats-count text-center"><%= @applied %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="stats stats-interviews pt-2 pb-3 px-2">
              <div class="stats-body">
                <i class="fa-solid fa-people-arrows"></i>
                <h5 class="stats-title text-center"><strong>Interviews</strong></h5>
                <p class="stats-count text-center"><%= @interviews %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="stats stats-rejected pt-2 pb-3 px-2">
              <div class="stats-body">
                <i class="fa-solid fa-ban"></i>
                <h5 class="stats-title text-center"><strong>Rejected</strong></h5>
                <p class="stats-count text-center"><%= @rejected %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="stats stats-offers pt-2 pb-3 px-2">
              <div class="stats-body">
                <i class="fa-solid fa-trophy"></i>
                <h5 class="stats-title text-center"><strong>Offers</strong></h5>
                <p class="stats-count text-center"><%= @offers %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        data-controller="chart"
        data-chart-data-value="<%= @data_value %>"
        class="p-2 align-items-center"
      >
        <canvas data-chart-target="canvas" id="myChart" width="200" height="200"></canvas>

      </div>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-center my-4">
      <h3>Your jobs</h3>
      <div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#jobs<%= @new_job.id %>">
          Add new job
        </button>
        <%= render 'modal', job: @new_job %>
      </div>
    </div>
    <% @jobs.each do |job| %>
      <div>
        <%= render 'jobs/job_list', job: job %>
      </div>
    <% end %>
 </div>
</div>
